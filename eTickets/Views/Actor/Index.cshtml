@model IEnumerable<eTickets.Models.Actor>



<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Profile Picture URL</th>
                    <th>Full Name</th>
                    <th>Bio</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
             @foreach(var item in Model)
             {
                <tr>
                    <td class="align-middle">
                        <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width: 150px" />
                    </td>
                    <td  class="align-middle">@item.FullName</td>
                    <td  class="align-middle">@item.Bio</td>
                    <td  class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit </a> |
                        <a class="btn btn-outline-info"><i class="bi bi-eye"></i> Details </a> |
                        <a class="btn btn-danger text-white"><i class="bi bi-trash"></i> Delete </a> 
                    </td>
                </tr>
             }
            </tbody>
        </table>
    </div>

</div>